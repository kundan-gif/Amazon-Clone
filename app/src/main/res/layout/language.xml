<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
     android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activities.LanguageActivity">
    <ImageView
        android:layout_width="@dimen/dp_200"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/amazon_logo"
        android:layout_height="@dimen/dp_100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:fontFamily="@font/pt_sans_bold"
        android:text="@string/select_your_language"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_22"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            android:elevation="@dimen/dp_20"
            android:id="@+id/cardViewEnglish"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@drawable/language_english"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:elevation="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@drawable/language_hindi"
                android:layout_height="@dimen/dp_120"/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:elevation="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@drawable/language3"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:elevation="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@drawable/language4"
                android:layout_height="@dimen/dp_120"/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:elevation="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@drawable/language5"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:elevation="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@drawable/language6"
                android:layout_height="@dimen/dp_120"/>
        </androidx.cardview.widget.CardView>



    </LinearLayout>


</LinearLayout>