<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivMobilePic"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tvTitleMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_toEndOf="@+id/ivMobilePic"
            />

        <TextView
            android:id="@+id/tvPriceMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitleMobile"
            android:layout_margin="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_toEndOf="@+id/ivMobilePic"
            />

        <ImageView
            android:id="@+id/ivRatingMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPriceMobile"
            android:layout_toEndOf="@+id/ivMobilePic"
            android:src="@drawable/stars_3_5"
            />
        <TextView
            android:id="@+id/tvDescMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMobilePic"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>