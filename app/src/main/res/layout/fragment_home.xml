            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_a_location_to_see_product_availability"
                app:drawableStartCompat="@drawable/ic_baseline_location_on_24" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"

                            android:background="@drawable/circle_bg"
                            android:src="@drawable/primeimage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="@string/prime"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/smartphone" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="@string/mobile"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_bg"
                            android:id="@+id/ElectronicsLogo"
                            android:src="@drawable/elctronicsresponse" />

                        <TextView
                            android:id="@+id/nameI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="Electronics"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"
                            android:id="@+id/ivFashionLogo"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/fashion" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="Fashion"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/fresh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="Pantry"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/kitchen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="Pantry"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="60dp"
                            android:background="@drawable/circle_bg"
                            android:src="@drawable/pantry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="serif"
                            android:text="Pantry"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>


            </HorizontalScrollView>
            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                app:auto_cycle="true"
                android:layout_height="@dimen/dp_150"
                app:delay="0"
                app:period="1000"
                app:corner_radius="5">
            </com.denzcoskun.imageslider.ImageSlider>


<!--            <com.smarteist.autoimageslider.SliderView-->
<!--                android:id="@+id/main_image_slider"-->
